<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="stock_info_tree_view" model="ir.ui.view">
            <field name="name">stock.info.tree</field>
            <field name="model">stock.info</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="medicine_name_id"/>
                    <field name="sold_quantity"/>
                    <field name="total_quantity"/>
                    <field name="available_quantity"/>
                </tree>
            </field>
        </record>
        <record id="stock_info_form_view" model="ir.ui.view">
            <field name="name">stock.info.form</field>
            <field name="model">stock.info</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="medicine_name_id"/>
                            <field name="sold_quantity"/>
                            <field name="total_quantity"/>
                            <field name="available_quantity"/>
                        </group>
                    </sheet>
                </form> 
            </field>
        </record>

        <record id="action_stock_info" model="ir.actions.act_window">
           <field name="name">Stock Info</field>
           <field name="res_model">stock.info</field>
           <field name="view_mode">tree,form</field>
        </record>


        <!-- <menuitem id="stock_info" name="stock" action="action_stock_info" parent="medical_store" sequence="4"/> -->

    </data>
</odoo>
